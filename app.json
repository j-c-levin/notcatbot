{
  "name": "Not a Cat Bot for Telegram",
  "description": "A dollars-chat themed chatbot for telegram",
  "repository": "https://github.com/j-c-levin/notcatbot",
  "logo": "http://dollars-bbs.org/images/dollars_logo.jpg",
  "keywords": [
    "node",
    "telegram",
    "bot",
    "telegraf"
  ],
  "buildpacks": [
    {
      "url": "heroku/nodejs"
    }
  ],
  "env": {
    "BOT_TOKEN": {
      "description": "Get this from the botfather on telegram",
      "value": "your_token_here",
      "required": true
    },
    "SECRET_PATH": {
      "description": "Some kind of random string",
      "generator": "secret",
      "required": true
    },
    "BOT_NAME": {
      "description": "The username of your bot on telegram",
      "value": "bot_username_here",
      "required": true
    }
  }
}